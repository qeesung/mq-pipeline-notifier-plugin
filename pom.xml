  <groupId>org.jenkins-ci.plugins</groupId>
  <artifactId>mq-pipeline-notifier</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>hpi</packaging>
  <properties>
    <jmockit.version>1.5</jmockit.version>
    <junit.version>4.11</junit.version>
    <amqp.client.version>3.4.1</amqp.client.version>
    <commons.validator.version>1.4.0</commons.validator.version>
    <commons.lang3.version>3.1</commons.lang3.version>
    <jenkins.version>2.46.2</jenkins.version>
  </properties>

  <name>MQ pipeline notifier Plugin</name>
  <description>Plugin can send pipeline stage status to RabbitMQ</description>
  <url>https://wiki.jenkins-ci.org/display/JENKINS/TODO+Plugin</url>

  <!-- The default licence for Jenkins OSS Plugins is MIT. Substitute for the applicable one if needed. -->

  <licenses>
    <license>
      <name>MIT License</name>
      <url>http://opensource.org/licenses/MIT</url>
    </license>
  </licenses>

  <!-- If you want this to appear on the wiki page:
